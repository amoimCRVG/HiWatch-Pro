<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/bg_color" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layoutDirection="rtl"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/include_title" />
    <RelativeLayout android:gravity="center_vertical" android:visibility="gone" style="@style/sport_settings_rl_style">
        <TextView android:textSize="15.0sp" android:textColor="@color/textColorBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/voice_player" />
        <androidx.appcompat.widget.SwitchCompat android:id="@id/switch_voice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:layout_alignParentLeft="true" />
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" style="@style/sport_settings_rl_style">
        <TextView android:text="@string/keep_sreen" style="@style/sport_his_details_tv3_style" />
        <androidx.appcompat.widget.SwitchCompat android:id="@id/switch_screen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:layout_alignParentLeft="true" />
    </RelativeLayout>
    <RelativeLayout android:visibility="gone" style="@style/sport_settings_rl_style">
        <TextView android:text="@string/map" android:layout_centerVertical="true" style="@style/sport_his_details_tv3_style" />
        <RadioGroup android:orientation="horizontal" android:id="@id/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <androidx.appcompat.widget.AppCompatRadioButton android:id="@id/radio_amap" android:layout_marginLeft="@dimen/dp_10" android:text="@string/general_amap" style="@style/sport_his_details_tv4_style" />
            <androidx.appcompat.widget.AppCompatRadioButton android:id="@id/radio_gmap" android:text="@string/general_gmap" style="@style/sport_his_details_tv4_style" />
        </RadioGroup>
    </RelativeLayout>
</LinearLayout>

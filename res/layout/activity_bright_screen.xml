<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/bg_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/title_chunk" layout="@layout/title_layout" />
    <RelativeLayout style="@style/frg_device_sub_page_common1_style">
        <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@mipmap/home_bg" android:scaleType="centerInside" />
        <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@mipmap/equipment_page_bs_icon" android:scaleType="centerInside" />
        <TextView android:textSize="@dimen/sp_15" android:textColor="@color/white" android:gravity="center" android:paddingBottom="@dimen/dp_5" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/bright_screen_set_tip" android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <LinearLayout android:scrollbarStyle="outsideInset" android:orientation="vertical" android:background="@color/frg_device_sub_common_color1" android:paddingLeft="@dimen/dp_15" android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/title_chunk">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/long_sit_line" android:paddingTop="@dimen/dp_10" android:paddingBottom="@dimen/dp_10" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/sp_18" android:textColor="@color/frg_device_sub_common_tv1_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_15" android:text="@string/is_screen" android:layout_weight="1.0" />
            <androidx.appcompat.widget.SwitchCompat android:id="@id/screen_status" android:layout_marginRight="@dimen/dp_15" style="@style/common_switch_style" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/bright_item_box" android:background="@color/frg_device_sub_common_color1" android:paddingLeft="@dimen/dp_15" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <View android:background="@color/line_color" android:layout_width="fill_parent" android:layout_height="1.0dip" />
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/screen_star_time_linear" android:paddingTop="@dimen/dp_10" android:paddingBottom="@dimen/dp_10" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/sp_18" android:textColor="@color/frg_device_sub_common_tv1_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_10" android:text="@string/warn_star_time_txt" android:layout_weight="1.0" />
            <TextView android:id="@id/screen_star_time" android:text="06:00" style="@style/device_settings_sub_page_1_style" />
        </LinearLayout>
        <View android:background="@color/line_color" android:layout_width="fill_parent" android:layout_height="1.0dip" />
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/screen_end_time_linear" android:paddingTop="@dimen/dp_10" android:paddingBottom="@dimen/dp_10" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/sp_18" android:textColor="@color/frg_device_sub_common_tv1_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_10" android:text="@string/warn_end_time_txt" android:layout_weight="1.0" />
            <TextView android:id="@id/screen_end_time" android:text="22:00" style="@style/device_settings_sub_page_1_style" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@id/set_screen_box" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

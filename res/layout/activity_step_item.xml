<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/title_chunk" layout="@layout/title_layout" />
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@id/pre_day_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上一天" />
        <TextView android:id="@id/step_item_day_txt" android:paddingLeft="@dimen/dp_30" android:paddingRight="@dimen/dp_30" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:id="@id/next_day_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下一天" />
    </LinearLayout>
    <TextView android:gravity="center" android:id="@id/total_step_txt" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <ListView android:id="@id/stept_item_list_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_marginRight="@dimen/dp_10" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="开始发送文件" android:onClick="startSendFile" />
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <EditText android:enabled="false" android:id="@id/edt_file_path" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="表盘路径" android:layout_weight="1.0" />
        <Button android:id="@id/btn_choise_file" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="选择文件" android:onClick="onChoiceFile" />
    </LinearLayout>
</LinearLayout>
